<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_toolbar_state</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- toolbar主题 -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_toolbar_state</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/MyToolbarNavigationButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/ToolbarMenuPopStyle</item>
    </style>

    <!-- toolbar的title字体样式 -->
    <style name="ToolbarTitle">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ArticleToolbarTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 自定义toolbar的navigation样式，设置到toolbar主题的"toolbarNavigationButtonStyle"属性 -->
    <!-- 如果图标过大，也可以将图标放到xxxhdpi中（分辨率越高，图片越小） -->
    <style name="MyToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- 指定toolbar菜单弹出方式，设置到toolbar主题的"actionOverflowMenuStyle"属性 -->
    <style name="ToolbarMenuPopStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!-- 是否覆盖锚点，默认为true，即盖住Toolbar，这里设置为不盖住Toolbar -->
    </style>

    <!-- 自定义toolbar的菜单样式，可设置字体的大小和颜色等属性 -->
    <style name="MyPopupMenuTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">17sp</item>
    </style>

    <!-- 自定义Dialog样式 -->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>  <!-- 没有标题-->
        <item name="android:windowBackground">@android:color/white</item>   <!-- 背景颜色 -->
        <item name="android:windowFrame">@null</item>   <!-- 没有边框 -->
        <item name="android:windowIsFloating">true</item>   <!-- 窗口浮动 -->
        <item name="android:windowContentOverlay">@null</item>  <!-- 没有阴影 -->
    </style>

</resources>
