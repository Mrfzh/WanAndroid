<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/bg_nav_main_header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_nav_main_header_head_image"
        android:src="@drawable/head_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/color_image_border"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_nav_main_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小黄"
        android:textSize="16sp"
        android:textColor="@color/color_nav_user_name"
        android:layout_below="@id/iv_nav_main_header_head_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"/>

</RelativeLayout>