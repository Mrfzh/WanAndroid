<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@drawable/ripple_item_click">

        <RelativeLayout
            android:id="@+id/rv_home_article_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_home_article_head_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head_image_article" />

            <TextView
                android:id="@+id/tv_home_article_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_home_article_head_image"
                android:layout_centerInParent="true"
                android:text="feng"
                android:textSize="15sp"
                android:textColor="@color/color_item_home_article_author_name"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_home_article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-12-10"
                android:textSize="15sp"
                android:textColor="@color/color_item_home_article_date"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_home_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一篇文章，教你学会Git一篇文章，教你学会Git"
            android:textSize="18sp"
            android:textColor="@color/color_item_home_article_title"
            android:maxLines="2"
            android:layout_below="@id/rv_home_article_top"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:transitionName="@string/tran_toolbar"/>

        <TextView
            android:id="@+id/tv_home_article_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Git"
            android:textSize="16sp"
            android:textColor="@color/color_item_home_article_chapter_name"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/iv_home_article_collect"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="2dp"
            android:src="@drawable/selector_collect_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>